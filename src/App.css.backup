.app {
  max-width: 800px;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24px;
  padding: 40px 20px;
}

.title-section {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  width: 100%;
}

.title {
  font-size: 32px;
  font-weight: 600;
  color: #ecf0f1;
  margin: 0;
  text-align: center;
}

.help-link {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  border: 2px solid #3498db;
  background-color: #3498db;
  color: white;
  font-size: 20px;
  font-weight: bold;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  padding: 0;
  line-height: 1;
}

.help-link:hover {
  background-color: #2980b9;
  border-color: #2980b9;
  transform: scale(1.1);
}

.subtitle {
  font-size: 16px;
  font-style: italic;
  color: #bdc3c7;
  margin-top: -16px;
  margin-bottom: 8px;
  text-align: center;
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
  width: 100%;
}

.input-group label {
  font-size: 14px;
  font-weight: 500;
  color: #bdc3c7;
}

.input-group input {
  padding: 12px 16px;
  font-size: 16px;
  border: 2px solid #34495e;
  border-radius: 8px;
  background-color: #34495e;
  color: #ecf0f1;
  transition: border-color 0.2s, background-color 0.2s;
}

.input-group input:focus {
  outline: none;
  border-color: #3498db;
  background-color: #2c3e50;
}

.input-group input:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.video-container {
  width: 100%;
  max-width: 640px;
  background-color: #000;
  border-radius: 8px;
  overflow: hidden;
  aspect-ratio: 16 / 9;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-container > div {
  width: 100%;
  height: 100%;
}

.controls-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
  width: 100%;
}

.buttons-row {
  display: flex;
  gap: 16px;
  width: 100%;
  justify-content: center;
}

.btn {
  padding: 14px 32px;
  font-size: 16px;
  font-weight: 600;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: opacity 0.2s, transform 0.1s;
  min-width: 120px;
}

.btn:hover:not(:disabled) {
  transform: translateY(-2px);
  opacity: 0.9;
}

.btn:active:not(:disabled) {
  transform: translateY(0);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-start {
  background-color: #27ae60;
  color: white;
}

.btn-stop {
  background-color: #e74c3c;
  color: white;
}

.btn-reset {
  background-color: #3498db;
  color: white;
}

.status {
  font-size: 24px;
  font-weight: 600;
  color: #ecf0f1;
  text-align: center;
  margin-top: 8px;
}

.help-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20px;
}

.help-modal {
  background-color: #34495e;
  border-radius: 12px;
  max-width: 600px;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
}

.help-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 2px solid #2c3e50;
}

.help-modal-header h2 {
  margin: 0;
  color: #ecf0f1;
  font-size: 24px;
}

.help-close {
  background: none;
  border: none;
  color: #ecf0f1;
  font-size: 32px;
  cursor: pointer;
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  transition: color 0.2s;
}

.help-close:hover {
  color: #e74c3c;
}

.help-content {
  padding: 24px;
  color: #ecf0f1;
}

.help-content ol {
  margin: 0;
  padding-left: 20px;
}

.help-content li {
  margin-bottom: 16px;
  line-height: 1.6;
}

.help-content ul {
  margin-top: 8px;
  margin-bottom: 8px;
  padding-left: 20px;
}

.help-content strong {
  color: #3498db;
}

.help-tip {
  margin-top: 20px;
  padding: 12px;
  background-color: #2c3e50;
  border-radius: 8px;
  border-left: 4px solid #3498db;
}

@media (max-width: 768px) {
  .controls-row {
    grid-template-columns: 1fr;
  }

  .buttons-row {
    flex-direction: column;
  }

  .btn {
    width: 100%;
  }

  .title {
    font-size: 24px;
  }

  .help-link {
    width: 28px;
    height: 28px;
    font-size: 18px;
  }

  .help-modal {
    max-height: 90vh;
  }

  .help-modal-header {
    padding: 16px 20px;
  }

  .help-modal-header h2 {
    font-size: 20px;
  }

  .help-content {
    padding: 20px;
  }
}

